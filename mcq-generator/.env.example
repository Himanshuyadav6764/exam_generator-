# MCQ Generator Service Environment Variables (Example)
# Copy this file to .env and fill in your actual values

# Service Configuration
PORT=5001
NODE_ENV=development

# Groq AI Configuration
GROQ_API_KEY=gsk_your_groq_api_key_here
AI_MODEL_API_KEY=gsk_your_groq_api_key_here
AI_MODEL_ENDPOINT=https://api.groq.com/openai/v1/chat/completions
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.3-70b-versatile

# AI Model Configuration
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TOP_P=1.0

# MongoDB Configuration (if needed)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lms_database?retryWrites=true&w=majority
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/lms_database?retryWrites=true&w=majority

# Logging
LOG_LEVEL=debug